{% extends "Shopping.html.twig" %}

{% block title %}{{ shopping.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                {% if shopping.image == null %}
                         <img src="{{ asset ('images/Guitar/product.jpg')}}" class="card-img-top"> 
                    {% else %}               
                         <img src="{{ asset ('images/Guitar/' ~ shopping.image)}}" class="card-img-top">  
                    {% endif %} 
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ shopping.name }}</h1>
                <h2>{{ shopping.price }} VND</h2>
                <hr>
                <b>Description: </b>{{ shopping.description }} <br>
                <b>Date: {{shopping.Date | date("d/m/Y")}}</b>
            </div>
        </div>
    </div>
{% endblock %}